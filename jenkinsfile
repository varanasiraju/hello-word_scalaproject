pipeline {
    agent any

    stages {

        stage('Compile') {
            steps {
                echo "Compiling..."
                sh "/usr/local/bin/sbt compile"
            }
        }

        stage('Test') {
            steps {
                echo "Testing..."
                sh "/usr/local/bin/sbt test"
            }
        }

        stage('Package') {
            steps {
                echo "Packaging..."
                sh "/usr/local/bin/sbt package"
            }
        }

	Stage('scoveragereport') {
	    steps {
	    	echo "scoveragereport..."
		sh "/usr/local/bin/sbt clean coverage test"
		sh "/usr/local/bin/sbt coverageReport"
	    }
	}
        
	stage('scalasytle') { 
	   steps { 
	      echo "scalastyle_check_report..."
	      sh "/usr/local/bin/sbt scalastyleGenerateConfig"
	      sh "/usr/local/bin/sbt scalastyle"
	   }
	}
    }
}
